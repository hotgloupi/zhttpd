<?xml version="1.0"?>
<configuration>

    <server>
        <modules-directory path="modules/" />
        <listen port="8080" />
        <listen port="443" io-module="mod_ssl"/>
    </server>

    <modules>
        <module name="mod_itworks" enabled="false" />
        <module name="mod_cgi" enabled="true">
            <option key="php" value="php-cgi" /> <!-- key: file extention -->
            <option key="php3" value="php-cgi" /> <!-- value: associated command/program -->
            <option key="pl" value="perl" />
            <option key=".dir" value="dir" />
        </module>
        <module name="mod_lua" enabled="true" />
        <module name="mod_filereader" enabled="true">
            <option key="jpg" value="image/jpeg" />
            <option key="so" value="octet/stream" />
            <option key="php" value="text/plain" />
        </module>
        <module name="mod_ssl">
            <option key="certif_file" value="doc/server.pem" />
            <option key="private_file" value="doc/server.pem" />
            <option key="password" value="password" />
        </module>
    </modules>

    <vhosts>

        <vhost name="monsite">
            <document-root path="D:\Programmation\C++\zhttpd-2012s-londei_a\trunk\tests/vhosts/" />
            <host match="127.0.0.1" />

            <module name="mod_cgi" enabled="true" />
            <module name="mod_filereader" enabled="false" />

            <vhost name="monsiteimg">
                <document-root path="D:\Programmation\C++\zhttpd-2012s-londei_a\trunk\tests/vhosts/img/" />
                <host match="127.0.0.1/img" />
            </vhost>
        </vhost>
        
        <vhost name="foirefox">
            <document-root path="D:\Programmation\C++\zhttpd-2012s-londei_a\trunk\tests/vhosts/firefox/" />
            <host match="firefox" />
        </vhost>
    </vhosts>
</configuration>
